{
    "extends": "plugin:@typescript-eslint/recommended",
    "env": {
        "browser": true,
        "node": true,
        "jest": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": { "modules": true },
        "ecmaVersion": 2018
    },
    "rules": {
        "prefer-destructuring": [
            "off",
            {
                "object": false,
                "array": false
            }
        ],
        "linebreak-style": 0,
        "operator-linebreak": 0,
        "react/destructuring-assignment": [
            "off",
            "never"
        ],
        "no-plusplus": "off",
        "no-unused-vars": [
            "error",
            {
                "vars": "all",
                "args": "none"
            }
        ],
        "comma-dangle": [
            "error",
            {
                "arrays": "never",
                "objects": "always-multiline",
                "imports": "never",
                "exports": "never",
                "functions": "ignore"
            }
        ],
        "arrow-parens": [
            2,
            "as-needed"
        ],
        "implicit-arrow-linebreak": "off",
        "no-unused-expressions": [
            "error",
            {
                "allowTernary": true
            }
        ],
        "camelcase": [
            "warn"
        ],
        "object-shorthand": [
            "error",
            "never"
        ],
        "no-shadow": [
            "warn"
        ],
        "max-len": [
            "warn",
            {
                "code": 200
            }
        ],
        "jsx-a11y/no-autofocus": "off",
        "no-prototype-builtins": "off",
        "semi": "error"
    }
}